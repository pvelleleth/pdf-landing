---
import Layout from '../layouts/Layout.astro';
import ModernHeader from '../components/ModernHeader.tsx';
import ModernHero from '../components/ModernHero.tsx';
import Features from '../components/Features.astro';
import Pricing from '../components/Pricing.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';

const pageTitle = "CuratePDF - Automated PDF Creation Tool | Drag & Drop Editor + API";
const pageDescription = "Create professional PDFs with dynamic templates and automate document generation via API. Drag-and-drop editor for invoices, reports, and more. Start free today!";
const pageKeywords = "PDF creator, PDF generator, invoice generator, document automation, PDF templates, business documents, drag and drop PDF editor, professional PDF creation, dynamic PDF generation, PDF builder, document designer";
const pageImage = "/landingpic.png";
const canonicalUrl = "https://curatepdf.com/";
---

<Layout 
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
  image={pageImage}
  canonical={canonicalUrl}
>
  <!-- Skip to main content for accessibility -->
  <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-blue-600 text-white px-4 py-2 rounded-md z-50">
    Skip to main content
  </a>
  
  <ModernHeader client:load>
    <Image 
      slot="imageComponent" 
      src="/image.png" 
      alt="CuratePDF Logo - Professional PDF Creation Tool" 
      width="70" 
      height="70" 
      loading="eager"
      title="CuratePDF - Create Professional PDFs"
    />
  </ModernHeader>
  
  <main id="main-content" role="main">
    <!-- Hidden structured content for SEO -->
    <div class="sr-only">
      <h2>CuratePDF - Professional PDF Creation and Automation Tool</h2>
      <p>
        CuratePDF is the leading professional PDF creation tool that enables businesses and individuals 
        to create stunning, professional documents with ease. Our drag-and-drop PDF editor supports 
        dynamic data binding, template management, and automated document generation for invoices, 
        reports, contracts, and more.
      </p>
      <h2>Key Features:</h2>
      <ul>
        <li>Drag-and-drop PDF editor with intuitive interface</li>
        <li>Dynamic data binding and merge capabilities</li>
        <li>Professional template library for business documents</li>
        <li>Automated invoice and report generation</li>
        <li>Cloud-based document storage and management</li>
        <li>Real-time collaboration and sharing</li>
        <li>API integration for workflow automation</li>
        <li>High-quality PDF export with print-ready output</li>
      </ul>
    </div>
    
    <ModernHero client:load>
      <Image 
        slot="landingImage" 
        src="/landingpic.png" 
        alt="CuratePDF Professional PDF Editor Interface - Drag and drop PDF creation tool showing template design, data binding, and document preview features" 
        width="1200" 
        height="800" 
        class="w-full h-auto object-cover"
        title="CuratePDF Interface - Create Professional PDFs with Drag & Drop"
        loading="eager"
      />
    </ModernHero>
    
    <Features />
    
    <Pricing />
    
    <!-- Additional SEO Content Section -->
    <section class="bg-white py-16" aria-labelledby="seo-content-heading">
      <div class="max-w-4xl mx-auto px-6">
        <div class="prose prose-lg max-w-none">
          <h2 id="seo-content-heading" class="text-3xl font-bold text-gray-900 mb-8 text-center">
            Why Choose CuratePDF for Professional PDF Creation?
          </h2>
          
          <div class="grid md:grid-cols-3 gap-12">
            <div>
              <h3 class="text-xl font-semibold text-gray-800 mb-4">
                Advanced PDF Generation Technology
              </h3>
              <p class="text-gray-600 mb-4">
                CuratePDF leverages cutting-edge technology to provide the most intuitive PDF creation experience. 
                Our drag-and-drop editor makes it easy for anyone to create professional documents without 
                design expertise.
              </p>
              <p class="text-gray-600">
                Whether you're generating invoices, creating reports, or designing marketing materials, 
                CuratePDF delivers pixel-perfect results every time.
              </p>
            </div>
            
            <div>
              <h3 class="text-xl font-semibold text-gray-800 mb-4">
                Streamline Your Document Workflow
              </h3>
              <p class="text-gray-600 mb-4">
                Save hours of manual work with our automated document generation features. Connect your data 
                sources and let CuratePDF create personalized documents at scale.
              </p>
              <p class="text-gray-600">
                Perfect for businesses that need to generate multiple documents with consistent branding 
                and formatting across all their communications.
              </p>
            </div>

            <div>
              <h3 class="text-xl font-semibold text-gray-800 mb-4">
                Powerful API for Automation
              </h3>
              <p class="text-gray-600 mb-4">
                Take your document automation to the next level with the CuratePDF API. Seamlessly integrate PDF generation into your existing workflows, applications, or backend systems.
              </p>
              <p class="text-gray-600">
                Our robust API allows you to programmatically create, customize, and deliver professional PDFs at scaleâ€”perfect for developers and businesses looking to automate document creation, invoicing, reporting, and more.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<style>
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
  
  .focus\:not-sr-only:focus {
    position: static;
    width: auto;
    height: auto;
    padding: 0.5rem 1rem;
    margin: 0;
    overflow: visible;
    clip: auto;
    white-space: normal;
  }
</style>
