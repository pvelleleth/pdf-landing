---
// Footer component for CuratePDF landing page
// Import the Astro Image component
import { Image } from 'astro:assets';
//import logo from '/image.png'; // Update the path to your PNG logo
---

<footer class="footer">
  <div class="container">
    <!-- Main Footer Content -->
    <div class="footer-content">
      <!-- Company Info -->
      <div class="footer-section">
        <div class="footer-brand">
          <div class="brand-logo">
            <!-- Use the Astro Image component for the logo -->
            <Image src="/image.png" alt="CuratePDF Logo" width={70} height={70} />
          </div>
          <span class="brand-text">CuratePDF</span>
        </div>
        <p class="footer-description">
          Create professional PDFs with our intuitive drag-and-drop editor. 
          Transform your data into beautiful documents in minutes, not hours.
        </p>
        <div class="social-links">
          <a href="https://twitter.com/curatepdf" class="social-link" aria-label="Follow us on Twitter">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"/>
            </svg>
          </a>
          <a href="https://linkedin.com/company/curatepdf" class="social-link" aria-label="Connect on LinkedIn">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/>
              <rect x="2" y="9" width="4" height="12"/>
              <circle cx="4" cy="4" r="2"/>
            </svg>
          </a>
          
        </div>
      </div>

      <!-- Product Links -->
      <div class="footer-section">
        <h3 class="footer-title">Product</h3>
        <ul class="footer-links">
          <li><a href="#features" class="footer-link">Features</a></li>
          <li><a href="#pricing" class="footer-link">Pricing</a></li>
          <li><a href="https://app.curatepdf.com" class="footer-link">Web App</a></li>
          <li><a href="https://docs.curatepdf.com" class="footer-link">API Documentation</a></li>
        </ul>
      </div>

      <!-- Resources -->
      <div class="footer-section">
        <h3 class="footer-title">Resources</h3>
        <ul class="footer-links">
          <li><a href="mailto:hello@curatepdf.com" class="footer-link">Help & Support</a></li>
          <li><a href="mailto:hello@curatepdf.com" class="footer-link">Contact Us</a></li>
        </ul>
      </div>

      <!-- Company -->
      <div class="footer-section">
        <h3 class="footer-title">Company</h3>
        <ul class="footer-links">
          <li><a href="mailto:hello@curatepdf.com" class="footer-link">About</a></li>
          <li><a href="mailto:hello@curatepdf.com" class="footer-link">Contact</a></li>
        </ul>
      </div>
    </div>

    <!-- Newsletter Signup -->
    <div class="newsletter-section">
      <div class="newsletter-content">
        <div class="newsletter-text">
          <h3 class="newsletter-title">Stay Updated</h3>
          <p class="newsletter-description">
            Get the latest features, tips, and PDF automation insights delivered to your inbox.
          </p>
        </div>
        <form class="newsletter-form" action="/subscribe" method="POST">
          <div class="newsletter-input-group">
            <input 
              type="email" 
              placeholder="Enter your email address" 
              class="newsletter-input"
              name="email"
              required
              aria-label="Email address for newsletter"
            />
            <button type="submit" class="newsletter-button">
              Subscribe
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </button>
          </div>
          <p class="newsletter-privacy">
            We respect your privacy. Unsubscribe at any time.
          </p>
        </form>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="footer-bottom">
      <div class="footer-bottom-content">
        <div class="footer-legal">
          <p class="copyright">
            Â© 2024 CuratePDF. All rights reserved.
          </p>
          <div class="legal-links">
            <a href="/privacy" class="legal-link">Privacy Policy</a>
            <a href="/terms" class="legal-link">Terms of Service</a>
          </div>
        </div>
       
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: #f8fafc;
    color: #374151;
    position: relative;
    border-top: 1px solid #e5e7eb;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 1;
  }

  /* Main Footer Content */
  .footer-content {
    display: grid;
    grid-template-columns: 2fr repeat(3, 1fr);
    gap: 48px;
    padding: 80px 0 60px 0;
    border-bottom: 1px solid #e5e7eb;
  }

  .footer-section {
    display: flex;
    flex-direction: column;
  }

  /* Brand Section */
  .footer-brand {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 24px;
  }

  .brand-logo {
    color: #3b82f6;
  }

  .brand-text {
    font-size: 1.5rem;
    font-weight: 700;
    letter-spacing: -0.02em;
    color: #1f2937;
  }

  .footer-description {
    font-size: 1rem;
    line-height: 1.6;
    color: #6b7280;
    margin: 0 0 32px 0;
    max-width: 280px;
  }

  .social-links {
    display: flex;
    gap: 16px;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: #f3f4f6;
    border-radius: 12px;
    color: #6b7280;
    text-decoration: none;
    transition: all 0.3s ease;
    border: 1px solid #e5e7eb;
  }

  .social-link:hover {
    background: #3b82f6;
    color: white;
    border-color: #3b82f6;
    transform: translateY(-2px);
  }

  /* Footer Links */
  .footer-title {
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0 0 24px 0;
    color: #1f2937;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .footer-link {
    color: #6b7280;
    text-decoration: none;
    font-size: 0.95rem;
    transition: color 0.3s ease;
    line-height: 1.5;
  }

  .footer-link:hover {
    color: #3b82f6;
  }

  /* Newsletter Section */
  .newsletter-section {
    padding: 48px 0;
    background: white;
    border-radius: 12px;
    margin: 40px 0;
    border: 1px solid #e5e7eb;
  }

  .newsletter-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 48px;
    align-items: center;
    max-width: 800px;
    margin: 0 auto;
    padding: 0 40px;
  }

  .newsletter-title {
    font-size: 1.75rem;
    font-weight: 700;
    margin: 0 0 12px 0;
    color: #1f2937;
  }

  .newsletter-description {
    font-size: 1rem;
    line-height: 1.6;
    color: #6b7280;
    margin: 0;
  }

  .newsletter-form {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .newsletter-input-group {
    display: flex;
    gap: 12px;
  }

  .newsletter-input {
    flex: 1;
    padding: 14px 18px;
    border: 1px solid #d1d5db;
    border-radius: 8px;
    background: #f9fafb;
    color: #1f2937;
    font-size: 1rem;
    transition: all 0.3s ease;
  }

  .newsletter-input::placeholder {
    color: #9ca3af;
  }

  .newsletter-input:focus {
    outline: none;
    border-color: #3b82f6;
    background: white;
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  }

  .newsletter-button {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: #3b82f6;
    color: white;
    border: none;
    padding: 14px 24px;
    border-radius: 8px;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .newsletter-button:hover {
    background: #2563eb;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
  }

  .newsletter-privacy {
    font-size: 0.875rem;
    color: #9ca3af;
    margin: 0;
    text-align: center;
  }

  /* Footer Bottom */
  .footer-bottom {
    padding: 32px 0;
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 24px;
  }

  .footer-legal {
    display: flex;
    align-items: center;
    gap: 32px;
    flex-wrap: wrap;
  }

  .copyright {
    margin: 0;
    color: #6b7280;
    font-size: 0.95rem;
  }

  .legal-links {
    display: flex;
    gap: 24px;
    flex-wrap: wrap;
  }

  .legal-link {
    color: #6b7280;
    text-decoration: none;
    font-size: 0.95rem;
    transition: color 0.3s ease;
  }

  .legal-link:hover {
    color: #3b82f6;
  }

  /* Footer Badges */
  .footer-badges {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
  }

  .badge {
    background: #f3f4f6;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    padding: 6px 12px;
  }

  .badge-text {
    font-size: 0.875rem;
    font-weight: 500;
    color: #6b7280;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .footer-content {
      grid-template-columns: 2fr repeat(2, 1fr);
      gap: 40px;
    }

    .footer-section:nth-child(n+4) {
      display: block;
    }
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 48px;
      padding: 60px 0 40px 0;
    }

    .footer-section:nth-child(n+4) {
      display: block;
    }

    .newsletter-content {
      grid-template-columns: 1fr;
      gap: 32px;
      text-align: center;
      padding: 0 24px;
    }

    .newsletter-input-group {
      flex-direction: column;
    }

    .newsletter-button {
      justify-content: center;
    }

    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
      gap: 16px;
    }

    .footer-legal {
      flex-direction: column;
      gap: 16px;
      text-align: center;
    }

    .legal-links {
      justify-content: center;
    }
  }

  @media (max-width: 640px) {
    .container {
      padding: 0 16px;
    }

    .social-links {
      justify-content: center;
    }

    .legal-links {
      flex-direction: column;
      gap: 12px;
    }

    .footer-badges {
      justify-content: center;
    }
  }

  /* Accessibility improvements */
  .newsletter-input:focus-visible,
  .newsletter-button:focus-visible,
  .footer-link:focus-visible,
  .legal-link:focus-visible,
  .social-link:focus-visible {
    outline: 2px solid #3b82f6;
    outline-offset: 2px;
  }
</style> 